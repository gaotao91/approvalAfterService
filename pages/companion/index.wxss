}

swiper{
  width: 100%;
  height: 450rpx;
  }

image{
  width: 100%;
}

.title-container{
  display: flex;
  width: 100%;
  height: 100rpx;
  /* background-color: #8c1fd4; */
  align-items: center;
  justify-content: center;
  border-top :1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;  
}

.title-container text{
  font-weight: bold;
}
.button-container{
  display: flex;
  flex-direction: column;
  flex-grow: 100;
  align-content: center;
  /* justify-content: center; */
  background-color: rgba(199, 194, 194, 0.411);

}

.my-cells{
  margin-left: 10rpx;
  margin-right: 10rpx;
  margin-top: 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.footer{
  position: absolute;
  bottom: 20rpx;
  /* background-color: rgba(104, 23, 23, 0.336); */
  width: 100%;
}

.footer-header{
  text-align: center;
  color:#7DE5FF;
}

.footer-content{
  text-align: center;
  font-weight: lighter;
}
