.container{
  display: flex;
  flex-direction: column;
  height: 100%;
  
  /* background-color: #aee90a */
}

.header{
  width:100%;
  display: flex;
  flex-direction: row;
  height:100rpx;
  align-items: center;
  justify-content: space-between;
  border-top :1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
}

.epsoide{
   margin-left:20rpx; 
   margin-top:14rpx;
}

.profile-container{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-right:30rpx;
  /* background-color: #d41717 */
}

.profile{
  width:80rpx;
  height:80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right:50rpx;
}

.share-btn{
  margin-top:28rpx;
  /* margin-right:50rpx; */
}

.share{
  /* padding:10rpx; */
